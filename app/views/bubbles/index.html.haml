
.pure-menu.pure-menu-open.pure-menu-horizontal
  = link_to t(:localize_app), '#', class:"pure-menu-heading"
  %ul
    %li{:class => @en_class}
      = link_to t(:en_lang), {locale: 'en'}
    %li{:class => @fr_class}
      = link_to t(:fr_lang), {locale: 'fr'}
.pure-g
  .pure-u-1-5
  .pure-u-3-5
    %h1= t :bubbles_display
    %p= link_to t(:want_new_one), {controller: 'bubbles', action: 'new'}, class: "pure-button pure-button-primary"
    %hr
    = params.inspect
    = @locale.inspect
    = @fr_class.inspect
    = @en_class.inspect
  .pure-u-1-5
