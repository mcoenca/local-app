.pure-menu.pure-menu-open.pure-menu-horizontal
  = link_to t('.localize_app'), '#', class:"pure-menu-heading"
  = l Time.now, :format => :long
  %ul
    %li{:class => set_selected_l[:en_c]}
      = link_to t('.en_lang'), {locale: 'en'}
    %li{:class => set_selected_l[:fr_c]}
      = link_to t('.fr_lang'), {locale: 'fr'}
.pure-g
  .pure-u-1-5
  .pure-u-3-5
    %h2= t '.bubbles_display', count: @bubbles.size
    .notice= flash[:notice] if !flash[:notice].blank?
    %table.pure-table.pure-table-bordered
      %thead
        %tr
          %th #
          %th= t 'activerecord.attributes.bubble.name'
          %th= t 'activerecord.attributes.bubble.feeling'
      %tbody
        - @bubbles.each do |bubble|
          %tr
            %th= status_tag(bubble.id,{:text => bubble.id.to_s})
            %th= bubble.name
            %th= bubble.feeling
    %p= link_to t('.want_new_one'), {action: 'new'}, class: "pure-button pure-button-primary"
    %hr
    = params.inspect
    = @locale.inspect
    = @fr_class.inspect
    = @en_class.inspect
  .pure-u-1-5
